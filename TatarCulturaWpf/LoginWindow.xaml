<Window x:Class="TatarCulturaWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TatarCulturaWpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="280" Width="440" WindowStartupLocation="CenterScreen"
        IsVisibleChanged="WindowIsVisibalChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>


        <Button x:Name="BtnRegistration" Click="BtnRegistrationClick" Content="Регистрация" Grid.Row="0" HorizontalAlignment="Right"  Width="100" Height="20" 
               Style="{DynamicResource ButtonUIRed}" FontSize="12" Margin="5"/>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            

            <Label Content="Логин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource LabelRed}" Margin="5"/>
            <Label Content="Пароль" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{DynamicResource LabelRed}" Margin="5"/>

            <TextBox x:Name="TbLogin" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Height="30" Margin="5" TabIndex="1"/>
            <PasswordBox x:Name="PbPassword" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="5" TabIndex="2"/>

        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
        <Label  Content="Запомнить меня" Grid.Row='2' FontSize="10" VerticalAlignment="Center" />
            <CheckBox x:Name="CheckerBox" VerticalAlignment="Center"/>
        </StackPanel>
        
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="BtnEnter" Click="BtnEnterClick" Content="Enter" Style="{DynamicResource ButtonUIRed}" Margin="2" TabIndex="3">
                
            </Button>
            <Button x:Name="BtnCancel" Click="BtnCancelClick" Content="Cancel" Style="{DynamicResource ButtonUIRed}" Margin="2"/>
            
        </StackPanel>
        
    </Grid>
</Window>
